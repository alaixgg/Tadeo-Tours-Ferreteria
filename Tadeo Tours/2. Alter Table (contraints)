ALTER TABLE hotel
ADD CONSTRAINT fk_id_reserva_hotel_2
FOREIGN KEY (id_reserva_hotel)
REFERENCES RESERVA_HOTEL(id_reserva_hotel);


ALTER TABLE vuelo
ADD CONSTRAINT fk_id_aerolinea
FOREIGN KEY (id_aerolinea)
REFERENCES aerolinea (id_aerolinea);


ALTER TABLE vuelo
ADD CONSTRAINT fk_id_aerolinea_2
FOREIGN KEY (id_reserva_avion)
REFERENCES RESERVA_AVION (id_reserva_avion);

ALTER TABLE reserva
RENAME COLUMN id_reserva_avion TO id_vuelo;



ALTER TABLE reserva
ADD CONSTRAINT fk_id_vuelo
FOREIGN KEY (ID_VUELO)
REFERENCES vuelo(ID_VUELO);



ALTER TABLE reserva
ADD CONSTRAINT fk_id_reserva_hotel_3
FOREIGN KEY (id_reserva_hotel)
REFERENCES RESERVA_HOTEL (id_reserva_hotel);


ALTER TABLE reserva
ADD CONSTRAINT fk_id_pago
FOREIGN KEY (id_pago)
REFERENCES pago (id_pago);

ALTER TABLE reserva
ADD CONSTRAINT fk_id_cliente 
FOREIGN KEY (id_cliente)
REFERENCES cliente (id_cliente);


ALTER TABLE estado
ADD CONSTRAINT uk_id_reserva UNIQUE (id_reserva);

